
<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class="container w-50">
    <h1 class="text-center">ご本人情報入力</h1>

    <%= render 'devise/shared/error_messages', model: f.object %>

    <div class="mb-3">
      <label class="form-label">氏名</label>
      <span class="form-label">必須</span>
      <%= f.text_area :name, class:"form-control", id:"nickname", placeholder:"例) 佐藤太郎", maxlength:"40" %>
    </div>
    <div class="mb-3">
      <label class="form-label">氏名カナ</label>
      <span class="form-label">必須</span>
      <%= f.text_area :name_kana, class:"form-control", id:"nickname", placeholder:"例) サトウタロウ", maxlength:"40" %>
    </div>
    <div class="mb-3">
      <label class="form-label">メールアドレス</label>
      <span class="form-label">必須</span>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="mb-3">
      <label class="form-label">パスワード</label>
      <span class="form-label">必須</span>
      <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="mb-3">
      <label class="form-label">パスワード(確認)</label>
      <span class="form-label">必須</span>
      <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="mb-3">
        <label class="form-label">生年月日</label>
        <span class="form-label">必須</span>
        <div class='input-group'>
            
            <%= raw sprintf(
                            f.date_select(
                              :date,
                              class:'form-select',
                              id:"birth-date",
                              use_month_numbers: true,
                              prompt:'--',
                              start_year: (Time.now.year - 5),
                              end_year: (Time.now.year),
                              date_separator: '%s'),
                            "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
    </div>
    <div class="text-center">
      <%= f.submit "ご本人情報登録" ,class:"btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>

