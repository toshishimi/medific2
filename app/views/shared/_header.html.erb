<header>
  <div class="px-3 py-2 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
        </a>
      </div>
    </div>
  </div>
  <div class="px-3 py-2 border-bottom mb-3">
    <div class="container d-flex flex-wrap justify-content-center">
      <a href=root_path class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
        <span class="fs-4">medific</span>
      </a>
      <div class="text-end">
        <% if user_signed_in? %>
          <%= link_to current_user.name, "#", class: "btn btn-light text-dark me-2" %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: "btn btn-light text-dark me-2" %>
          <%= link_to '新規登録', new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</header>